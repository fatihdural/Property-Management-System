<div class="wrapper">
    <div class="sidebar">
        {{> sidebar}}
    </div>
    <div class="main_content">
        <div class="header">
            {{> header}}
        </div>  
        <div class="info">
            <br>
            <div>
                <p style=" margin-left:50px; font-size:30px; " >Kişiler</p> 
                <p style="margin-left: 58%;" >{{adet}} Toplam |  </p>

                <button class="btnSearchIcon"><i onclick="searchKisi()" class="fa fa-search" ></i></button>

                <div class="search-box"  >
                    <label for="kisi-search-input"  id="kisi-search-input-label-info" style="transform: translate(0%, -10%);" >Kişi Ara</label>
                    <input type="text" id="kisi-search-input" name="kisi-search-input" onfocus="focusSearchKisi()" onfocusout="notFocusSearchKisi()" >
    
                </div>

                <div class="emlak-ekle-button" >
                    <i class="fas fa-plus"></i>
                    <span onclick="window.location = '/kisiler/kisi-ekle'" style="padding-left: 10px; cursor: pointer; " >Kişi Ekle</span>      
                </div>

            </div>

            <!-- Ev 1  -->
            {{#each innerusers}}
            <div class="emlak-ornek" >
                
                    <img id="image" src="{{user_image}}" style="float: left; border-radius: 10%;" alt="Emlak Örnek Görsel" width="150px" height="120px" >

                    <div style="padding-left: 180px;" >
                        <span id="kisi-name" style="font-size: 24px; font-weight: 550;" > {{name}} </span>

                        <form style="display: none;" action="/kisiler/sil/{{_id}}" id="kisi-sil-form-{{_id}}" method="GET"></form>
                        <i class="fas fa-times-circle" onclick="silKisi(`{{_id}}`)" style="cursor: pointer; float: right; margin-right: 10px;" ></i>
                        <br>
                        <span style="padding-left: 1px; padding-top: 10px; position: absolute;"> {{email}} </span>
                        <span style="padding-left: 1px; padding-top: 40px; position: absolute;" >Tel : +90 {{tel}}</span>

                    </div>
                
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="/js/kisiler/search.js"></script>
<script src="/js/kisiler/search-kisi.js"></script>


<script>
    function silKisi(id){
        if (confirm('Bu kişiyi silmek istediğine emin misin?')) {
            // Save it!
            $('#kisi-sil-form-'+id).submit();
            console.log('siliniyo');
        } else {
        // Do nothing!
            console.log('Thing was not saved to the database.');
        }
    }


</script>